                                        <TextBlock DockPanel.Dock="Top"
                                                   Text="{Binding StringFormat=Uₒᵤₜ₂  {0} V,Path=VoltageOut2}" />
                                        <TextBlock DockPanel.Dock="Top"
                                                   Text="{Binding StringFormat=Iᵢₙ  {0} A,Path=CurrentIn}" />
                                    </DockPanel>
                                </Button>

                                <!-- -->
