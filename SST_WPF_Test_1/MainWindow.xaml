                                <!--              Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}"> -->
                                <!--     </TextBox> -->
                                <!-- -->
                                <!-- </StackPanel> -->
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

